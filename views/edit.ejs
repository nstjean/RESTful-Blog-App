<% include ./partials/header %>


<div class="ui main text container">
	
	<div class="ui breadcrumb">
	  <a class="section" href="/">Home</a>
	  <i class="right angle icon divider"></i>
	  <a class="active section">Edit</a>
	</div>

	
	<div class="ui segment">
		
	
		<div class="ui huge header">
			Edit
		</div>

		<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value="<%= blog.title %>">
			</div>
			<div class="field">
				<label>Image URL</label>
				<input type="text" name="blog[image]" value="<%= blog.image %>">
			</div>
			<div class="field">
				<label>Post</label>
				<textarea name="blog[body]"><%= blog.body %></textarea>
			</div>
			<button type="submit" class="ui teal button">Save Changes</button>
		</form>
	
	</div>
	
</div>


<% include ./partials/footer %>