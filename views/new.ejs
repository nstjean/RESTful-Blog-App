<% include ./partials/header %>


<div class="ui main text container">
	

	<div class="ui breadcrumb">
	  <a class="section" href="/">Home</a>
	  <i class="right angle icon divider"></i>
	  <a class="active section">New</a>
	</div>

	
	<div class="ui segment">
		
	
		<div class="ui huge header">
			New Post
		</div>

		<form action="/blogs" method="POST" class="ui form">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" placeholder="Title">
			</div>
			<div class="field">
				<label>Image URL</label>
				<input type="text" name="blog[image]" placeholder="Image URL">
			</div>
			<div class="field">
				<label>Post</label>
				<textarea name="blog[body]" placeholder="Write your post here"></textarea>
			</div>
			<button type="submit" class="ui teal button">Submit New Post</button>
		</form>
		
	</div>
	
</div>


